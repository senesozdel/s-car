@using VehicleRenting.UI.Models.DTOs
@model List<UserDTO>
@{
    Layout = ViewBag.Layout;
}

<link href="~/css/user/list.css" rel="stylesheet" />

<h2 class="text-gradient mb-4">Kullanıcı Listesi</h2>

@if (ViewBag.Role == "Admin")
{
    <a href="@Url.Action("Create", "User")" class="btn btn-primary mb-4">Yeni Kullanıcı Ekle</a>
}

<table class="table table-dark table-hover  table-striped glass-card">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="Delete" asp-controller="User" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
