@using VehicleRenting.UI.Models.DTOs

@model List<VehicleDTO>
@{
    Layout = ViewBag.Layout;
   var role = ViewBag.Role;
}
<link href="~/css/vehicle/list.css" rel="stylesheet" />

<div class="container py-5">
    <div class="d-flex justify-content-between">
        <h2 class="text-gradient mb-4">Araç Listesi</h2>
        @if (role == "Admin")
        {
            <a href="@Url.Action("Create", "Vehicle")" class="btn btn-primary mb-4">Yeni Araç Ekle</a>
        }

    </div>

    <div class="table-responsive shadow-lg rounded-4 overflow-hidden glass-card">
        <table class="table table-hover table-dark mb-0">
            <thead class="bg-gradient text-white">
                <tr>
                    <th>ID</th>
                    <th>Araç Adı</th>
                    <th>Plaka</th>
                    <th>Son İşlem Yapan</th>
                    @if (role == "Admin")
                    {
                        <th>İşlemler</th>

                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.Id" class="hover-row">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.PlateNumber</td>
                        <td>@item.LastUpdatedUser</td>
                        @if (role == "Admin")
                        {
                            <td>
                                <a href="@Url.Action("Edit", "Vehicle", new { id = item.Id })" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i></a>
                                <form id="vehicleDeleteForm" data-delete-url="@Url.Action("Delete", "Vehicle")" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>

                        }
                 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/vehicle/vehicle.js"></script>
